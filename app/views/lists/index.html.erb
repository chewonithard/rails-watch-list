<div class="container">

  <div class="home-banner">
    <h1>My Movies</h1>
  </div>

  <div class="cards-container">
    <div class="cards">
      <% @lists.each do |list| %>
        <%= link_to list_path(list) do %>
          <% if list.photo %>
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 600, crop: :fill %>">
              <h4><%= list.name %></h4>
            </div>
          <% else %>
            <%= "no photo found" %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="new-list-container">
    <h3>Add a new list</h3>
    <%= render "form", list: @list %>
  </div>

</div>
